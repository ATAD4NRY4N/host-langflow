{
  "$schema": "https://flightcontrol.dev/schema.json",
  "environments": [
    {
      "name": "production",
      "region": "us-east-2",
      "vpc": {
        "endpoints": {
          "ssm": true
        }
      },
      "services": [
        {
          "id": "langflow-web",
          "name": "Web server",
          "type": "fargate",
          "public": false,
          "dockerfile": "./Dockerfile",
          "cpu": 0.5,
          "memory": 1,
          "port": 7860,
          "healthCheck": {
            "path": "/health",
            "gracePeriodSeconds": 120,
            "timeoutSeconds": 30,
            "intervalSeconds": 60
          },
          "enableExecuteCommand": true
        },
        {
          "id": "bastion",
          "name": "Bastion Host",
          "type": "ec2",
          "public": true,
          "instanceType": "t3.micro",
          "ami": "ami-00eab0beb9d4cb37d",
          "keyPair": "langflow-bastion",
          "userData": "#!/bin/bash\ndnf update -y\ndnf install -y socat\n# Install AWS CLI v2\ncurl 'https://awscli.amazonaws.com/awscli-exe-linux-x86_64.zip' -o 'awscliv2.zip'\nunzip awscliv2.zip\n./aws/install"
        }
      ]
    }
  ]
}
